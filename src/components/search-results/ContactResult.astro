---
export interface Props {
  result: {
    type: string;
    title: string;
    subtitle?: string;
    content?: string;
    icon: string;
  };
}

const { result } = Astro.props;
---

<div class="space-y-6">
  <!-- Email Card -->
  <div class="bg-zinc-800 rounded-2xl p-8 border border-zinc-700">
    <div class="flex items-center gap-6 mb-6">
      <div class="w-16 h-16 bg-zinc-700 rounded-xl flex items-center justify-center text-2xl border border-zinc-600">
        📧
      </div>
      <div>
        <h3 class="text-2xl font-bold text-zinc-100 mb-2">Email Contact</h3>
        <p class="text-zinc-400 font-medium">{result.subtitle}</p>
      </div>
    </div>
    
    <div class="bg-zinc-900 rounded-lg p-4 border border-zinc-700 mb-6">
      <div class="flex items-center justify-between">
        <span class="text-zinc-300 font-mono">{result.subtitle}</span>
        <button onclick={`navigator.clipboard.writeText('${result.subtitle}'); alert('Email copied to clipboard!')`}
                class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-3 py-1 rounded text-sm transition-colors border border-zinc-600">
          Copy
        </button>
      </div>
    </div>
    
    <div class="space-y-4">
      <div class="bg-zinc-900 rounded-xl p-4 border border-zinc-700">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-2 h-2 bg-zinc-400 rounded-full"></div>
          <span class="text-zinc-400 text-sm">Email Address</span>
        </div>
        <div class="font-mono text-zinc-100 text-lg bg-zinc-800 px-3 py-2 rounded-lg border border-zinc-700">
          {result.subtitle}
        </div>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        <button 
          onclick={`window.open('mailto:${result.subtitle}', '_blank')`}
          class="group bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-6 py-3 rounded-xl transition-all transform hover:scale-105 border border-zinc-600">
          <div class="flex items-center justify-center gap-2">
            <span>✉️</span>
            <span class="font-medium">Send Email</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </button>
        
        <button 
          onclick={`navigator.clipboard.writeText('${result.subtitle}'); alert('Email copied to clipboard! 📋')`}
          class="group bg-zinc-800 hover:bg-zinc-700 text-zinc-100 px-6 py-3 rounded-xl transition-all transform hover:scale-105 border border-zinc-700">
          <div class="flex items-center justify-center gap-2">
            <span>📋</span>
            <span class="font-medium">Copy Email</span>
          </div>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <a href="/contact" class="group bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 rounded-xl p-4 transition-all">
      <div class="text-2xl mb-2">📞</div>
      <h4 class="text-zinc-100 font-medium mb-1">More Contacts</h4>
      <p class="text-zinc-400 text-sm">View all contact options</p>
    </a>
    
    <a href="/projects" class="group bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 rounded-xl p-4 transition-all">
      <div class="text-2xl mb-2">🚀</div>
      <h4 class="text-zinc-100 font-medium mb-1">My Projects</h4>
      <p class="text-zinc-400 text-sm">See what I've built</p>
    </a>
    
    <div onclick="window.dispatchEvent(new CustomEvent('openSearch'))" class="group bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 rounded-xl p-4 transition-all cursor-pointer">
      <div class="text-2xl mb-2">🔍</div>
      <h4 class="text-zinc-100 font-medium mb-1">Search More</h4>
      <p class="text-zinc-400 text-sm">Find other information</p>
    </div>
  </div>
</div>
