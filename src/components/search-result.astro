---
export interface Props {
  result?: {
    type: string;
    title: string;
    subtitle?: string;
    content: string;
    icon: string;
    data?: any;
  };
}

const { result } = Astro.props;

// If no result is provided, this component won't render anything
if (!result) {
  return null;
}
---

  <div class="min-h-full flex flex-col bg-zinc-900">
  <!-- Result Header -->
  <div class="mb-6 pb-4 border-b border-zinc-800">
    <div class="flex items-center gap-4 mb-3">
      <div class="text-4xl text-zinc-100">{result.icon}</div>
      <div>
        <h1 class="text-2xl font-bold text-zinc-100">{result.title}</h1>
        {result.subtitle && (
          <p class="text-zinc-400 text-lg">{result.subtitle}</p>
        )}
      </div>
    </div>
    <div class="inline-block bg-zinc-800 text-zinc-300 px-3 py-1 rounded-full text-sm font-medium border border-zinc-700">
      {result.type.charAt(0).toUpperCase() + result.type.slice(1)} Result
    </div>
  </div>

  <!-- Result Content based on type -->
  <div class="flex-1">
    {result.type === 'contact' && result.subtitle?.includes('@') && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ“§ Email Contact</h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <span class="text-zinc-400 text-sm w-20">Email:</span>
              <a href={`mailto:${result.subtitle}`} 
                 class="text-zinc-100 hover:text-zinc-300 transition-colors font-mono underline">
                {result.subtitle}
              </a>
            </div>
            <div class="flex items-center gap-3">
              <span class="text-zinc-400 text-sm w-20">Type:</span>
              <span class="text-zinc-100">Primary Contact</span>
            </div>
          </div>
          <div class="mt-4 pt-4 border-t border-zinc-700">
            <button 
              onclick={`window.open('mailto:${result.subtitle}', '_blank')`}
              class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors border border-zinc-600">
              Send Email
            </button>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸ’¡ Quick Actions</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <button 
              onclick={`navigator.clipboard.writeText('${result.subtitle}'); alert('Email copied to clipboard!')`}
              class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors text-left">
              ğŸ“‹ Copy Email
            </button>
            <a href="/contact" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors text-center block">
              ğŸ“ More Contact Info
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'experience' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ¢ Work Experience</h3>
          <div class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <span class="text-zinc-400 text-sm block">Position</span>
                <span class="text-zinc-100 font-medium">{result.title}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Company</span>
                <span class="text-zinc-100 font-medium">{result.subtitle}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Duration</span>
                <span class="text-zinc-100 font-medium">{result.content}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Type</span>
                <span class="text-zinc-100 font-medium">Professional Experience</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸ”— Related</h3>
          <div class="space-y-2">
            <a href="/about" class="block bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors">
              ğŸ“„ View Full Resume
            </a>
            <a href="/projects" class="block bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors">
              ğŸš€ See Related Projects
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'skill' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ› ï¸ Technical Skill</h3>
          <div class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <span class="text-zinc-400 text-sm block">Technology</span>
                <span class="text-zinc-100 font-medium text-lg">{result.title}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Category</span>
                <span class="text-zinc-100 font-medium">{result.subtitle}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Proficiency</span>
                <div class="flex items-center gap-2 mt-1">
                  <div class="flex gap-1">
                    <div class="w-3 h-3 bg-zinc-100 rounded-full"></div>
                    <div class="w-3 h-3 bg-zinc-100 rounded-full"></div>
                    <div class="w-3 h-3 bg-zinc-100 rounded-full"></div>
                    <div class="w-3 h-3 bg-zinc-100 rounded-full"></div>
                    <div class="w-3 h-3 bg-zinc-700 rounded-full"></div>
                  </div>
                  <span class="text-zinc-400 text-sm">Advanced</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸ’¼ Experience with {result.title}</h3>
          <p class="text-zinc-300 text-sm leading-relaxed">
            I have extensive experience working with {result.title} in various projects. 
            This technology is part of my {result.subtitle?.replace(' skill', '')} toolkit and I use it regularly 
            in professional development work.
          </p>
          <div class="mt-4">
            <a href="/projects" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors inline-block border border-zinc-600">
              View Projects Using {result.title}
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'education' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ“ Educational Background</h3>
          <div class="space-y-4">
            <div class="grid grid-cols-1 gap-4">
              <div>
                <span class="text-zinc-400 text-sm block">Degree</span>
                <span class="text-zinc-100 font-medium text-lg">{result.title}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Institution</span>
                <span class="text-zinc-100 font-medium">{result.subtitle}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Status</span>
                <span class="text-zinc-100 font-medium">Currently Pursuing</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸ“š Academic Focus</h3>
          <p class="text-zinc-300 text-sm leading-relaxed mb-4">
            My studies in Computer Engineering cover a comprehensive curriculum including software development, 
            system design, algorithms, and modern web technologies.
          </p>
          <div class="space-y-2">
            <a href="/about" class="block bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors">
              ğŸ“– More About My Education
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'certification' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ† Certification</h3>
          <div class="space-y-4">
            <div class="grid grid-cols-1 gap-4">
              <div>
                <span class="text-zinc-400 text-sm block">Achievement</span>
                <span class="text-zinc-100 font-medium text-lg">{result.title}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Type</span>
                <span class="text-zinc-100 font-medium">Professional Certification</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Recognition</span>
                <span class="text-zinc-100 font-medium">Competition Achievement</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸŒŸ Achievement Details</h3>
          <p class="text-zinc-300 text-sm leading-relaxed">
            This certification represents my participation and achievement in competitive programming 
            and innovation challenges, demonstrating problem-solving skills and technical expertise.
          </p>
        </div>
      </div>
    )}

    {result.type === 'fact' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ¯ Personal Interest</h3>
          <div class="space-y-4">
            <div>
              <span class="text-zinc-400 text-sm block mb-2">Fun Fact</span>
              <p class="text-zinc-100 font-medium text-lg leading-relaxed">{result.subtitle}</p>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸ’­ What This Means</h3>
          <p class="text-zinc-300 text-sm leading-relaxed">
            This personal interest reflects my passion for technology and innovation. It shows how I approach 
            problems creatively and stay curious about emerging technologies and possibilities.
          </p>
          <div class="mt-4">
            <a href="/about" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors inline-block border border-zinc-600">
              Learn More About Me
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'role' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ’¼ Professional Role</h3>
          <div class="space-y-4">
            <div>
              <span class="text-zinc-400 text-sm block">Current Position</span>
              <span class="text-zinc-100 font-medium text-lg">{result.subtitle}</span>
            </div>
            <div>
              <span class="text-zinc-400 text-sm block">Specialization</span>
              <span class="text-zinc-100 font-medium">Full-Stack Development</span>
            </div>
            <div>
              <span class="text-zinc-400 text-sm block">Focus Areas</span>
              <span class="text-zinc-100 font-medium">Web Development, System Design, Innovation</span>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸš€ What I Do</h3>
          <p class="text-zinc-300 text-sm leading-relaxed mb-4">
            As a full-stack developer, I work with both frontend and backend technologies to create 
            complete web solutions. I'm passionate about building innovative applications that solve real problems.
          </p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <a href="/projects" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors text-center block border border-zinc-600">
              View My Work
            </a>
            <a href="/contact" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors text-center block border border-zinc-600">
              Let's Collaborate
            </a>
          </div>
        </div>
      </div>
    )}

    {result.type === 'location' && (
      <div class="space-y-6">
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-4">ğŸ“ Location Information</h3>
          <div class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <span class="text-zinc-400 text-sm block">Current Location</span>
                <span class="text-zinc-100 font-medium text-lg">{result.subtitle}</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Country</span>
                <span class="text-zinc-100 font-medium">Nepal</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Time Zone</span>
                <span class="text-zinc-100 font-medium">NPT (UTC+5:45)</span>
              </div>
              <div>
                <span class="text-zinc-400 text-sm block">Availability</span>
                <span class="text-zinc-300 font-medium">Available for Remote Work</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-zinc-800 rounded-xl p-6 border border-zinc-700">
          <h3 class="text-lg font-semibold text-zinc-100 mb-3">ğŸŒ Work Preferences</h3>
          <p class="text-zinc-300 text-sm leading-relaxed mb-4">
            I'm based in Nepal and available for both local and remote work opportunities. 
            I'm comfortable working with international teams across different time zones.
          </p>
          <a href="/contact" class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors inline-block border border-zinc-600">
            Discuss Opportunities
          </a>
        </div>
      </div>
    )}
  </div>

  <!-- Back to Search -->
  <div class="mt-8 pt-4 border-t border-zinc-800">
    <button 
      onclick="window.dispatchEvent(new CustomEvent('openSearch'))"
      class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-4 py-2 rounded-lg transition-colors">
      ğŸ” Search Again
    </button>
  </div>
</div>
