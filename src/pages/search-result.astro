---
import InfoLayout from "../layouts/InfoLayout.astro";
---

<InfoLayout title="Search Results" description="Search results from portfolio">
  <div id="search-results-container">
    <!-- Default content when no result is available -->
    <div id="no-result" class="text-center py-12">
      <div class="text-6xl mb-4">üîç</div>
      <h2 class="text-2xl font-bold text-zinc-100 mb-3">No Search Result</h2>
      <p class="text-zinc-400 mb-6">No search result found. Try searching for something first.</p>
      <button 
        onclick="window.dispatchEvent(new CustomEvent('openSearch'))"
        class="bg-zinc-700 hover:bg-zinc-600 text-zinc-100 px-6 py-3 rounded-lg transition-colors border border-zinc-600">
        Start Searching
      </button>
    </div>
  </div>
</InfoLayout>

<script>
  import { showToast, copyToClipboard, openEmail, loadSearchResult } from '../lib/searchResultHelpers.js';
  
  // Load the result when the page loads
  document.addEventListener('DOMContentLoaded', loadSearchResult);
</script>
