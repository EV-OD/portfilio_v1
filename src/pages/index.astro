---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
import { PERSONAL_INFO, NAVIGATION_LINKS } from "../constants";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#18181b"
					color2="#373737"
					color3="#63636b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- MacBook Window Style Glassmorphic Overlay -->
				<div class="absolute inset-4 sm:inset-8 rounded-xl backdrop-blur-xl bg-white/5 border border-white/10 shadow-2xl flex flex-col">
					<!-- macOS Window Controls -->
					<div class="flex items-center gap-2 p-4 border-b border-white/10">
						<div class="w-3 h-3 rounded-full bg-red-400/80 hover:bg-red-400 transition-colors cursor-pointer"></div>
						<div class="w-3 h-3 rounded-full bg-yellow-400/80 hover:bg-yellow-400 transition-colors cursor-pointer"></div>
						<div class="w-3 h-3 rounded-full bg-green-400/80 hover:bg-green-400 transition-colors cursor-pointer"></div>
						
						<!-- URL Bar -->
						<div class="flex-1 mx-4">
							<div class="bg-white/10 rounded-lg px-4 py-2 flex items-center gap-2 backdrop-blur-sm">
								<svg class="w-4 h-4 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15l-3-3m0 0l3-3m-3 3h12a9 9 0 11-9-9m-9 9a9 9 0 019-9"/>
								</svg>
								<span class="text-white/80 text-sm font-mono">portfolio://rabin-lamichhane/home</span>
							</div>
						</div>
						
						<div class="text-right">
							<span class="text-white/50 text-xs">Portfolio</span>
						</div>
					</div>

					<!-- Window Content with Finder-style Layout -->
					<div class="flex-1 flex overflow-hidden">
						<!-- Sidebar -->
						<div class="w-64 bg-white/5 border-r border-white/10 p-4 flex flex-col overflow-hidden">
							<!-- Logo/Avatar Section -->
							<div class="mb-6 text-center flex-shrink-0">
								<div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-600 rounded-xl mx-auto mb-3 flex items-center justify-center shadow-lg">
									<span class="text-white font-bold text-xl">RL</span>
								</div>
								<h3 class="text-white font-semibold">Rabin Lamichhane</h3>
								<p class="text-white/60 text-sm">Full-Stack Developer</p>
							</div>

							<!-- Navigation Items -->
							<nav class="space-y-2 flex-1 overflow-y-auto custom-scrollbar">
								<a href="/" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-blue-500/20 text-blue-300 transition-all hover:bg-blue-500/30 group">
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
									</svg>
									<span class="font-medium">Home</span>
								</a>
								
								<a href="/projects" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:text-white hover:bg-white/10 transition-all group">
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2 6a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM4 8v6h12V8H4z"/>
									</svg>
									<span class="font-medium">My Projects</span>
								</a>
								
								<a href="/about" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:text-white hover:bg-white/10 transition-all group">
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
									</svg>
									<span class="font-medium">About</span>
								</a>
								
								<a href="/contact" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:text-white hover:bg-white/10 transition-all group">
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
										<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
									</svg>
									<span class="font-medium">Contact</span>
								</a>
							</nav>

							<!-- Available for Work Status -->
							<div class="mt-auto flex-shrink-0">
								<AvailableForWork className="py-2" />
							</div>
						</div>

						<!-- Main Content Area -->
						<div class="flex-1 overflow-y-auto custom-scrollbar">
							<div class="p-6 sm:p-8 flex flex-col justify-center min-h-full">
								<div class="text-center">
									<H1 size="large"> Welcome <br /> to my Portfolio </H1>
									<p class="text-white/80 text-lg mt-6 max-w-2xl mx-auto">
										I'm a full-stack developer passionate about creating innovative solutions. 
										Explore my work and let's build something amazing together.
									</p>
									
									<div class="mt-8 flex items-center justify-center gap-4">
										<Link href="/projects">View My Work</Link>
										<Link href="/contact" variant="secondary">Get In Touch</Link>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
