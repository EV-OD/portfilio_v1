---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-screen flex items-center justify-center">
			<div class="absolute w-full h-full sm:min-h-screen -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<H1 size="large" className="px-4 sm:px-8 w-full fixed top-4 sm:top-8"> Nikola <br /> Tesla </H1>
				
			<div class="px-4 sm:px-8 w-full fixed bottom-4 sm:bottom-4">
				<AvailableForWork className="py-4" />
				<div class="mb-8 flex items-center justify-between">
					<div class="flex items-center gap-4">
						<Link href="#">Book a call</Link>
						<Link href="/projects" variant="secondary">View recent work</Link>
					</div>

					<Navigation client:load>
						<Link href="/blog" variant="secondary">Blog</Link>
						<Link href="/about" variant="secondary">About</Link>
						<Link href="/contact" variant="secondary">Contact</Link>
					</Navigation>
				</div>
			</div>

		</div>
	</main>
</RootLayout>
