---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import { PERSONAL_INFO } from "../constants";
import profileImage from "../assets/me.jpg";
---

<InfoLayout 
	title={`${PERSONAL_INFO.name} - Portfolio`}
	description={`Welcome to ${PERSONAL_INFO.name}'s portfolio. ${PERSONAL_INFO.shortBio}`}
>

	<div class="flex flex-col justify-center min-h-full">
		<div class="text-center">
			<!-- Profile Photo - Mobile Only -->
			<div class="mb-8 lg:hidden">
				<div class="w-32 h-32 mx-auto rounded-2xl overflow-hidden shadow-2xl ring-4 ring-white/20 hover:ring-white/30 transition-all duration-300 hover:scale-105">
					<img 
						src={profileImage.src} 
						alt={PERSONAL_INFO.name}
						class="w-full h-full object-cover"
					/>
				</div>
			</div>

			<H1 size="large"> 
				Hi, I'm <br />
				<span class="bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
					{PERSONAL_INFO.name}
				</span>
			</H1>
			
			<!-- Title/Role -->
			<p class="text-white/90 text-xl mt-4 font-medium">
				{PERSONAL_INFO.title}
			</p>
			
			<!-- Bio -->
			<p class="text-white/70 text-lg mt-6 max-w-3xl mx-auto leading-relaxed">
				{PERSONAL_INFO.shortBio}
			</p>
			
			<!-- Location -->
			<p class="text-white/50 text-base mt-4 flex items-center justify-center gap-2">
				<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
				</svg>
				{PERSONAL_INFO.location}
			</p>
			
			<div class="mt-8 flex items-center justify-center gap-4 flex-wrap">
				<Link href="/projects">View My Work</Link>
				<Link href="/contact" variant="secondary">Get In Touch</Link>
			</div>
		</div>
	</div>
</InfoLayout>

