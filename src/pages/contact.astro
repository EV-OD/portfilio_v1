---
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
---

<InfoLayout>
     <div class="pt-0 p-4 sm:p-8 min-h-screen flex flex-col justify-between">
          
          <div>
               <H1 > Get In Touch </H1>
               <h2 class="mt-4 sm:mt-12 text-2xl sm:text-4xl text-zinc-400 text-balance">
                    Connecting with our clients <br class="hidden sm:block" />
                    to create tailor-made solutions
               </h2>

               <div class="mt-6 sm:mt-12 flex flex-col gap-1">
                    <a href="mailto:hello@nikola.com" class="group flex items-center gap-1 text-xl sm:text-2xl text-zinc-400 hover:text-zinc-50">
                         hello@nikola.com
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="24" height="24" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="currentColor" d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10" opacity=".5"/>
                              <path fill="currentColor" d="M13.53 8.47a.75.75 0 1 0-1.06 1.06l1.72 1.72H8a.75.75 0 0 0 0 1.5h6.19l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3a.75.75 0 0 0 0-1.06z"/>
                         </svg>
                    </a>

                    <a href="#" class="mt-8 w-fit group flex items-center gap-1 text-base sm:text-lg text-zinc-500 hover:text-zinc-100">
                         GitHub 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>

                    <a href="#" class="w-fit group flex items-center gap-1 text-base sm:text-lg text-zinc-500 hover:text-zinc-100">
                         Twitter 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>

                    <a href="#" class="w-fit group flex items-center gap-1 text-base sm:text-lg text-zinc-500 hover:text-zinc-100">
                         Instagram 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>
               </div>
          </div>

          <div>
               <p class="text-base sm:text-lg text-zinc-500">481 8th Ave</p>
               <p class="text-base sm:text-lg text-zinc-500">New York, NY 10001</p>
               <p class="text-base sm:text-lg text-zinc-500">United States</p>
          </div>
     </div>
</InfoLayout>
