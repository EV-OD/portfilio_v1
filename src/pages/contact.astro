---
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
---

<InfoLayout>
     <div class="pt-0 p-4 sm:p-8 min-h-screen flex flex-col justify-between">
          
          <div>
               <H1 > Get In Touch </H1>
               <p class="mt-4 text-2xl sm:text-4xl text-zinc-400 text-balance">
                    Connecting with our clients to create tailor-made solutions
               </p>

               <h2 class="mt-6 sm:mt-12 text-xl sm:text-2xl text-zinc-400 hover:text-zinc-200">hello@nikola.com</h2>
               <div class="mt-8 flex flex-col gap-1">
                    <a href="#" class="w-fit group flex items-center gap-1 text-xl sm:text-2xl text-zinc-400 hover:text-zinc-200">
                         GitHub 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>

                    <a href="#" class="w-fit group flex items-center gap-1 text-xl sm:text-2xl text-zinc-400 hover:text-zinc-200">
                         Twitter 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>

                    <a href="#" class="w-fit group flex items-center gap-1 text-xl sm:text-2xl text-zinc-400 hover:text-zinc-200">
                         Instagram 
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="18" height="18" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 12h2.5M20 12l-6-6m6 6l-6 6m6-6H9.5"/>
                         </svg>
                    </a>
               </div>
          </div>

          <div>
               <p class="text-xl sm:text-2xl text-zinc-500">481 8th Ave</p>
               <p class="text-xl sm:text-2xl text-zinc-500">New York, NY 10001</p>
               <p class="text-xl sm:text-2xl text-zinc-500">United States</p>
          </div>
     </div>
</InfoLayout>
