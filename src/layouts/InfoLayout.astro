---
import RootLayout from "./RootLayout.astro";
import Footer from "../components/footer.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
import Search from "../components/search";
import profileImage from "../assets/me.jpg";

const { title, description } = Astro.props;

const pathname = Astro.url.pathname;
---

<RootLayout title={title} description={description}>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					color1="#18181b"
					color2="#373737"
					color3="#63636b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<!-- MacBook Window Style Glassmorphic Overlay -->
				<div class="absolute inset-4 sm:inset-8 lg:inset-8 inset-x-4 inset-y-4 pb-24 lg:pb-0 rounded-xl backdrop-blur-xl bg-white/5 border border-white/10 shadow-2xl flex flex-col">
					<!-- macOS Window Controls -->
					<div class="flex items-center gap-2 p-4 border-b border-white/10">
						<div class="w-3 h-3 rounded-full bg-red-400/80 hover:bg-red-400 transition-colors cursor-pointer"></div>
						<div class="w-3 h-3 rounded-full bg-yellow-400/80 hover:bg-yellow-400 transition-colors cursor-pointer"></div>
						<div class="w-3 h-3 rounded-full bg-green-400/80 hover:bg-green-400 transition-colors cursor-pointer"></div>
						
						<!-- URL Bar -->
						<div class="flex-1 mx-4">
							<div class="bg-white/10 rounded-lg px-4 py-2 flex items-center gap-2 backdrop-blur-sm">
								<svg class="w-4 h-4 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15l-3-3m0 0l3-3m-3 3h12a9 9 0 11-9-9m-9 9a9 9 0 019-9"/>
								</svg>
								<span class="text-white/80 text-sm font-mono flex-1 truncate">
									{/* Mobile URLs (shorter) */}
									<span class="sm:hidden">
										{pathname === "/" && "portfolio://~/home"}
										{pathname === "/projects" && "portfolio://~/projects"}
										{pathname === "/about" && "portfolio://~/about"}
										{pathname === "/contact" && "portfolio://~/contact"}
										{pathname === "/search-result" && "portfolio://~/search"}
										{pathname.startsWith("/blog") && "portfolio://~/blog"}
									</span>
									{/* Desktop URLs (full) */}
									<span class="hidden sm:inline">
										{pathname === "/" && "portfolio://rabin-lamichhane/home"}
										{pathname === "/projects" && "portfolio://rabin-lamichhane/projects"}
										{pathname === "/about" && "portfolio://rabin-lamichhane/about"}
										{pathname === "/contact" && "portfolio://rabin-lamichhane/contact"}
										{pathname === "/search-result" && "portfolio://rabin-lamichhane/search-results"}
										{pathname.startsWith("/blog") && "portfolio://rabin-lamichhane/blog"}
									</span>
								</span>
								
								<!-- Search Button -->
								<button 
									id="search-btn"
									class="flex items-center gap-2 px-3 py-1.5 rounded-md transition-all group text-white/70 hover:text-white hover:bg-white/20"
									title="Search (Cmd+K or Ctrl+K)"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
									</svg>
									<div class="hidden sm:flex items-center gap-1 text-xs text-white/50">
										<span class="bg-white/20 px-1.5 py-0.5 rounded text-xs">âŒ˜</span>
										<span class="bg-white/20 px-1.5 py-0.5 rounded text-xs">K</span>
									</div>
								</button>
							</div>
						</div>
					</div>

					<!-- Window Content with Finder-style Layout -->
					<div class="flex-1 flex overflow-hidden">
						<!-- Desktop Sidebar -->
						<div class="hidden lg:flex w-64 bg-white/5 border-r border-white/10 p-4 flex-col overflow-hidden">
							<!-- Logo/Avatar Section -->
							<div class="mb-6 text-center flex-shrink-0">
								<div class="w-16 h-16 rounded-xl mx-auto mb-3 overflow-hidden shadow-lg ring-2 ring-white/20">
									<img 
										src={profileImage.src} 
										alt="Rabin Lamichhane" 
										class="w-full h-full object-cover"
									/>
								</div>
								<h3 class="text-white font-semibold">Rabin Lamichhane</h3>
								<p class="text-white/60 text-sm">Full-Stack Developer</p>
							</div>

							<!-- Navigation Items -->
							<nav class="space-y-2 flex-1 overflow-y-auto custom-scrollbar">
								<a href="/" class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${
									pathname === "/" 
										? "bg-blue-500/20 text-blue-300" 
										: "text-white/70 hover:text-white hover:bg-white/10"
								}`}>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
									</svg>
									<span class="font-medium">Home</span>
								</a>
								
								<a href="/projects" class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${
									pathname === "/projects" 
										? "bg-blue-500/20 text-blue-300" 
										: "text-white/70 hover:text-white hover:bg-white/10"
								}`}>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2 6a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM4 8v6h12V8H4z"/>
									</svg>
									<span class="font-medium">My Projects</span>
								</a>
								
								<a href="/about" class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${
									pathname === "/about" 
										? "bg-blue-500/20 text-blue-300" 
										: "text-white/70 hover:text-white hover:bg-white/10"
								}`}>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
									</svg>
									<span class="font-medium">About</span>
								</a>
								
								<a href="/contact" class={`flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${
									pathname === "/contact" 
										? "bg-blue-500/20 text-blue-300" 
										: "text-white/70 hover:text-white hover:bg-white/10"
								}`}>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
										<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
									</svg>
									<span class="font-medium">Contact</span>
								</a>
							</nav>

							<!-- Available for Work Status -->
							<div class="mt-auto flex-shrink-0">
								<AvailableForWork className="py-2" />
							</div>
						</div>

						<!-- Main Content Area -->
						<div class="flex-1 overflow-y-auto custom-scrollbar">
							<div class="p-6 sm:p-8 content-with-mobile-nav">
								<slot />
							</div>
						</div>
					</div>

					<!-- Mobile Navigation Sheet -->
					<div class="lg:hidden fixed bottom-6 left-1/2 transform -translate-x-1/2 z-50 mobile-nav-sheet">
						<div class="bg-white/15 backdrop-blur-sm border border-white/30 rounded-2xl shadow-2xl p-3 ring-1 ring-white/10">
							<div class="flex items-center gap-3">
								<!-- Home -->
								<a href="/" class={`mobile-nav-item p-3 rounded-xl transition-all duration-200 ${
									pathname === "/" 
										? "bg-blue-500/30 text-blue-200 shadow-lg shadow-blue-500/20 ring-1 ring-blue-400/50" 
										: "text-white/70 hover:text-white hover:bg-white/20 hover:ring-1 hover:ring-white/30"
								}`} title="Home">
									<svg class="w-5 h-5 drop-shadow-[0_0_4px_rgba(255,255,255,0.3)]" fill="currentColor" viewBox="0 0 20 20">
										<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
									</svg>
								</a>
								
								<!-- Projects -->
								<a href="/projects" class={`mobile-nav-item p-3 rounded-xl transition-all duration-200 ${
									pathname === "/projects" 
										? "bg-blue-500/30 text-blue-200 shadow-lg shadow-blue-500/20 ring-1 ring-blue-400/50" 
										: "text-white/70 hover:text-white hover:bg-white/20 hover:ring-1 hover:ring-white/30"
								}`} title="Projects">
									<svg class="w-5 h-5 drop-shadow-[0_0_4px_rgba(255,255,255,0.3)]" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2 6a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM4 8v6h12V8H4z"/>
									</svg>
								</a>
								
								<!-- About -->
								<a href="/about" class={`mobile-nav-item p-3 rounded-xl transition-all duration-200 ${
									pathname === "/about" 
										? "bg-blue-500/30 text-blue-200 shadow-lg shadow-blue-500/20 ring-1 ring-blue-400/50" 
										: "text-white/70 hover:text-white hover:bg-white/20 hover:ring-1 hover:ring-white/30"
								}`} title="About">
									<svg class="w-5 h-5 drop-shadow-[0_0_4px_rgba(255,255,255,0.3)]" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
									</svg>
								</a>
								
								<!-- Contact -->
								<a href="/contact" class={`mobile-nav-item p-3 rounded-xl transition-all duration-200 ${
									pathname === "/contact" 
										? "bg-blue-500/30 text-blue-200 shadow-lg shadow-blue-500/20 ring-1 ring-blue-400/50" 
										: "text-white/70 hover:text-white hover:bg-white/20 hover:ring-1 hover:ring-white/30"
								}`} title="Contact">
									<svg class="w-5 h-5 drop-shadow-[0_0_4px_rgba(255,255,255,0.3)]" fill="currentColor" viewBox="0 0 20 20">
										<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
										<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
									</svg>
								</a>

								<!-- Search -->
								<button 
									id="mobile-search-btn"
									onclick="window.dispatchEvent(new CustomEvent('openSearch'))"
									class="mobile-nav-item p-3 rounded-xl transition-all duration-200 text-white/70 hover:text-white hover:bg-white/20 hover:ring-1 hover:ring-white/30"
									title="Search"
								>
									<svg class="w-5 h-5 drop-shadow-[0_0_4px_rgba(255,255,255,0.3)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
									</svg>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Search Component -->
	<Search client:load />
</RootLayout>

<script>
	// Global search functionality for InfoLayout
	let searchComponent;
	
	// Global keyboard shortcut for Cmd+K / Ctrl+K
	document.addEventListener('keydown', (e) => {
		if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
			e.preventDefault();
			openSearch();
		}
	});

	// Handle search button click with better timing
	function initializeSearchButtons() {
		const searchBtn = document.getElementById('search-btn');
		const mobileSearchBtn = document.getElementById('mobile-search-btn');
		
		if (searchBtn && !searchBtn.hasAttribute('data-search-initialized')) {
			searchBtn.addEventListener('click', openSearch);
			searchBtn.setAttribute('data-search-initialized', 'true');
			console.log('Desktop search button initialized');
		}
		
		if (mobileSearchBtn && !mobileSearchBtn.hasAttribute('data-search-initialized')) {
			mobileSearchBtn.addEventListener('click', openSearch);
			mobileSearchBtn.setAttribute('data-search-initialized', 'true');
			console.log('Mobile search button initialized');
		}
	}

	// Try multiple times to ensure buttons are found
	document.addEventListener('DOMContentLoaded', () => {
		initializeSearchButtons();
		
		// Also try after a short delay in case of timing issues
		setTimeout(initializeSearchButtons, 100);
		setTimeout(initializeSearchButtons, 500);
	});

	// Also initialize when the page is fully loaded
	window.addEventListener('load', initializeSearchButtons);

	function openSearch() {
		console.log('openSearch called');
		// Dispatch a custom event that the Search component can listen to
		window.dispatchEvent(new CustomEvent('openSearch'));
	}
</script>
