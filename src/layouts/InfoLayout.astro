---
import RootLayout from "./RootLayout.astro";
import WarpBackground from "../components/warp-background";

const { title, description } = Astro.props;
---

<RootLayout title={title} description={description}>
    <div class="relative flex gap-4">
        <nav class="relative w-full max-sm:w-4 sm:min-h-screen">
            <div class="w-full h-full sm:max-w-sm max-sm:w-4 fixed -z-10 sm:left-4 sm:bottom-4 sm:rounded-b-full overflow-hidden">
				<WarpBackground
					color1="#ffffff"
					color2="#27272a"
					color3="#52525b"
					speed={0.15}
					swirl={1.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>
        </nav>

        <main>
            <slot />
        </main>
    </div>
</RootLayout>
